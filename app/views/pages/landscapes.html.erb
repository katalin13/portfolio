
<div class="container">
  <h1 class="display-4">Beautiful landscapes from around the world!</h1>

 <div class="landscapes">
  <div class="row">
    <% @images.each do |image| %>
      <div class="polaroid">
        <div class="rounded">
          <%= image_tag "landscapes/#{ File.basename(image) }", class: 'img-responsive rounded', style: 'width:100%' %>
        </div>
      </div>
    <% end %>
  </div>
 </div>
</div>
